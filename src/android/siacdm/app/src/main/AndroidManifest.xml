<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sg.edu.nus.iss.ft08.siacdm">

  <!-- To auto-complete the email text field in the login form with the user's emails -->
  <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
  <uses-permission android:name="android.permission.READ_PROFILE"/>
  <uses-permission android:name="android.permission.READ_CONTACTS"/>

  <!-- To call REST API -->
  <uses-permission android:name="android.permission.INTERNET"/>

  <user-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.authenticate.LoginActivity"
        android:label="@string/title_activity_login">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.MainActivity"
        android:label="@string/title_activity_main"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.task.TasksActivity"
        android:label="@string/title_activity_tasks"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.schedule.SchedulesActivity"
        android:label="@string/title_activity_schedules"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.user.UsersActivity"
        android:label="@string/title_activity_users"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.task.TaskDetailActivity"
        android:label="@string/title_activity_task_detail"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.schedule.ScheduleDetailActivity"
        android:label="Schedule program Detail"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.user.UserDetailActivity"
        android:label="@string/title_activity_user_detail"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.schedule.UserSchedulesActivity"
        android:label="User Schedules"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.schedule.TaskSchedulesActivity"
        android:label="Radio Program Schedules"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="sg.edu.nus.iss.ft08.siacdm.user.MyProfileActivity"
        android:label="My Profile"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>